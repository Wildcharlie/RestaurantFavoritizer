<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Restautant Favoritizer</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Restaurant Favoritizer", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/"><i class="fa fa-home"></i>&nbsp; Home</a></li>
                    <li><a href="/MyFavorites"><i class="fa fa-star"></i>&nbsp; Favorites</a></li>
                    <li><a href="/Map"><i class="fa fa-map"></i>&nbsp; Map</a></li>
                    <li><a href="/Profile"><i class="fa fa-user"></i>&nbsp; Profile</a></li>
                </ul>
                <form id="SearchNav" class="navbar-form navbar-left" action="/Home/Search" method="post" role="search">
                    <div class="form-group">
                        <div class="input-group">
                            @Html.TextBox("SearchString", null, new { @class = "form-control", @placeholder = "Search" })
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="submit" id="SearchNav"><i class="fa fa-search"></i></button>
                            </span>
                        </div>
                    </div>
                </form>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="fav-footer">
            <p>&copy; @DateTime.Now.Year - Restaurant Favoritizer</p>
        </footer>
    </div>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDFRB5faj9FozFL-YUA513d_WaeVyLxDSg&libraries=places&callback=initMap" async defer></script>
    @RenderSection("scripts", required: false)
</body>
</html>
