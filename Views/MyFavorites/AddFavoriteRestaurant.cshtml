@model RestaurantFavoritizer.Models.Restaurant

<div class="col-md-6 favorite-item">
    <div id="Restaurant-@Model.RestaurantID" class="list-group">
        <div class="list-group-item bg-primary restaurant-name">
            <span class="list-group-icons pull-right add-cursor-span">
                <span class="restaurant-item-add" title="Add Item To Favorites" data-json="{&quot;RestaurantID&quot;: @Model.RestaurantID}" data-toggle="modal" data-target="#addMenuItemModal">
                    <i class="fa fa-plus-square fa-lg"></i>
                </span>
                <span class="restaurant-delete" title="Remove from Favorites" data-json="{&quot;RestaurantID&quot;: @Model.RestaurantID}">
                    <i class="fa fa-trash fa-lg"></i>
                </span>
            </span>
            <h3>@Model.RestaurantName</h3>
        </div>
    </div>
</div>   