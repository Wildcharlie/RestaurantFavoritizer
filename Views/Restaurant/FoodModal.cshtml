@model RestaurantFavoritizer.Models.RestaurantViewClass

<div id="foodModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Food Item</h4>
            </div>
            <div class="modal-body">
                <form id="eventFoodForm" action="/Restaurant/AddNewFood" method="post">
                    <input id="RestaurantID" value="@Model.Restaurant.RestaurantID" name="RestaurantID" type="number" style="display: none" />
                    <div class="form-group">
                        <label for="FoodItemName">Name</label>
                        @Html.TextBox("FoodItemName", null, new { @class = "form-control", @maxlength = "40" })
                    </div>
                    <div class="form-group">
                        <label for="FoodItemDescription">Description</label>
                        @Html.TextArea("FoodItemDescription", null, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="price">Price</label>
                        @Html.TextBox("price", null, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="FoodItemType">Type</label>
                        @Html.EnumDropDownListFor(model => model.FoodItemType, null, new { @class = "form-control" })
                    </div>
                    <input class="btn btn-default" type="button" value="Save New Food" id="SaveFood" />
                    <div id="msgFood" class="msg"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="foodModalCloseButton" type="button" class="btn btn-default">Close</button>
            </div>
        </div>
    </div>
</div>