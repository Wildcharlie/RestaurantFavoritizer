@model RestaurantFavoritizer.Models.RestaurantViewClass

<div id="drinkModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Drink Item</h4>
            </div>
            <div class="modal-body">
                <form id="eventDrinkForm" action="/Restaurant/AddNewDrink" method="post">
                    <input id="RestaurantID" value="@Model.Restaurant.RestaurantID" name="RestaurantID" type="number" style="display: none" />
                    <div class="form-group">
                        <label for="DrinkItemName">Name</label>
                        @Html.TextBox("DrinkItemName", null, new { @class = "form-control", @maxlength = "40" })
                    </div>
                    <div class="form-group">
                        <label for="DrinkDescription">Description</label>
                        @Html.TextArea("DrinkItemDescription", null, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="price">Price</label>
                        @Html.TextBox("price", null, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="DrinkItemType">Type</label>
                        @Html.EnumDropDownListFor(model => model.DrinkItemType, null, new { @class = "form-control" })
                    </div>
                    <input class="btn btn-default" type="button" value="Save New Drink" id="SaveDrink" />
                    <div id="msgDrink" class="msg"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="drinkModalCloseButton" type="button" class="btn btn-default">Close</button>
            </div>
        </div>
    </div>
</div>