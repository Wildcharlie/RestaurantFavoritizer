@model RestaurantFavoritizer.Models.RestaurantViewClass

<div id="employeeModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Employee</h4>
            </div>
            <div class="modal-body">
                <form id="eventEmployeeForm" action="/Restaurant/AddNewEmployee" method="post">
                    <input id="RestaurantID" value="@Model.Restaurant.RestaurantID" name="RestaurantID" type="number" style="display: none" />
                    <div class="form-group">
                        <label for="EmployeeName">Name</label>
                        @Html.TextBox("EmployeeName", null, new { @class = "form-control", @maxlength = "40" })
                    </div>
                    <div class="form-group">
                        <label for="EmployeeDescription">Description</label>
                        @Html.TextArea("EmployeeDescription", null, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="EmployeeType">Type</label>
                        @Html.EnumDropDownListFor(model => model.EmployeeType, null, new { @class = "form-control" })
                    </div>
                    <input class="btn btn-default" type="button" value="Add New Employee" id="SaveEmployee" />
                    <div id="msgEmployee" class="msg"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="employeeModalCloseButton" type="button" class="btn btn-default">Close</button>
            </div>
        </div>
    </div>
</div>